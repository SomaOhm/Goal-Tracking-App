# Environment Configuration Template
# Copy this to .env and fill in your actual values

# ============================================================================
# PostgreSQL (Transactional Database)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/goaltracking

# Optional: If using async driver
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/goaltracking

# ============================================================================
# Snowflake (Analytics & Read-Only)
# ============================================================================
# Your Snowflake account identifier (find in URL: https://xy12345.us-east-1.snowflakecomputing.com)
SNOWFLAKE_ACCOUNT=xy12345.us-east-1

# Your Snowflake login credentials
SNOWFLAKE_USER=your_email@company.com
SNOWFLAKE_PASSWORD=your_snowflake_password

# Snowflake warehouse (for running queries)
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Snowflake database and schema
SNOWFLAKE_DATABASE=ANALYTICS_DB
SNOWFLAKE_SCHEMA=PUBLIC

# ============================================================================
# Redis (For Celery Task Queue)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# Optional: If Redis requires password
# REDIS_URL=redis://:password@localhost:6379/0

# ============================================================================
# Gemini API (AI Generation)
# ============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# Application Settings
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to False in production)
DEBUG=True

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Optional: Secrets Management
# ============================================================================
# If using AWS Secrets Manager
# AWS_REGION=us-east-1
# AWS_SECRET_NAME=goal-tracking-app/prod

# If using HashiCorp Vault
# VAULT_ADDR=https://vault.company.com
# VAULT_TOKEN=your_vault_token
